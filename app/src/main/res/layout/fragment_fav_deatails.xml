<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".favDeatailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="serif"
            android:text="Your Title Here"
            android:textColor="@color/grey"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- RatingBar -->
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="@color/yellow"
            android:rating="4"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:stepSize="1"
            android:layout_below="@id/text_title"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true" />

        <!-- Image -->
        <ImageView
            android:id="@+id/image_id"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/not"
            android:layout_below="@id/ratingBar"
            android:layout_marginTop="8dp"/>


        <!-- Detail -->
        <LinearLayout
            android:id="@+id/detai_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_id"
            android:background="@color/black"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="cursive"
                android:text="Your Detail Here"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="cursive"
                android:text="Your Detail Here"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detai_l"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Publish with icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_access_time_filled_24"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/publ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Publish"
                android:textColor="#5C5B5B" />

            <!-- Author with icon -->

            <!-- Source with icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_web_24"

                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Source"
                android:textColor="@color/grey" />

        </LinearLayout>
        <!-- Floating Action Button -->



    </RelativeLayout>


</layout>